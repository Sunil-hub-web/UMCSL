<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/lin_ExistingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Date&amp;time:"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_OpeningDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:text="29/4/2022 12:38"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="Account No:"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>


                <TextView
                    android:id="@+id/text_AccountNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="1002"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Collect Amount :"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_CollectAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs. 1200"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Balance Amount :"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_BalanceAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rs. 2200"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/eighty"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:text="Print"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_gravity="right"
                android:layout_margin="@dimen/five"
                android:background="@drawable/button_bg"
                android:textSize="@dimen/textsize"
                android:backgroundTint="@color/blue"
                android:padding="@dimen/five">

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>