<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cancel48"
        android:layout_alignParentRight="true"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/fifty">



        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/two_hundred"
            android:layout_height="@dimen/hundred_fifty"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:layout_marginBottom="@dimen/fifty"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:hint="Account Number"
            app:boxStrokeColor="@color/back2"
            app:hintTextColor="@color/back2">

            <EditText
                android:id="@+id/edit_AccountNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:inputType="number"

                android:padding="@dimen/ten"
                android:textColor="@color/textColor"
                android:textSize="@dimen/edittextsize"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:hint="Customer Name"
            app:boxStrokeColor="@color/back2"
            app:hintTextColor="@color/back2">

            <EditText
                android:id="@+id/edit_CustomerName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:inputType="date"

                android:padding="@dimen/ten"
                android:textColor="@color/textColor"
                android:textSize="@dimen/edittextsize"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:hint="Mobile Number"
            app:boxStrokeColor="@color/back2"
            app:hintTextColor="@color/back2">

            <EditText
                android:id="@+id/edit_MobileNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:inputType="text"

                android:padding="@dimen/ten"
                android:textColor="@color/textColor"
                android:textSize="@dimen/edittextsize"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:hint="Balance Amount"
            app:boxStrokeColor="@color/back2"
            app:hintTextColor="@color/back2">

            <EditText
                android:id="@+id/edit_BalanceAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty"
                android:inputType="number"

                android:padding="@dimen/ten"
                android:textColor="@color/textColor"
                android:textSize="@dimen/edittextsize"/>

        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>

</RelativeLayout>