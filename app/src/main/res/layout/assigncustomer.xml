<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/lin_ExistingCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        android:layout_marginBottom="@dimen/ten"
        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Date:"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_OpeningDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:text="19 dec 2013"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:text="Account No:"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>


                <TextView
                    android:id="@+id/text_AccountNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1002"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customer Name :"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_CustomerName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sunil Kumar dash"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobile Number :"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_MobileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1234567890"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Statues :"
                    android:textColor="@color/back2"
                    android:textSize="@dimen/textsize">

                </TextView>

                <TextView
                    android:id="@+id/text_Statues"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Activie"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize">

                </TextView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/thirty"
                    android:layout_weight="1"
                    android:src="@drawable/circle_edit_pen_pencile_style_icon">

                </ImageView>

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="@dimen/thirty"
                    android:layout_weight="1"
                    android:src="@drawable/eye_view_search_find_zoom_icon">

                </ImageView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>